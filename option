  //option 2.4: finding the nth value of a fibonacci sequence:
  
  int sequenceVal () {
    int sequenceLength;
    int sequenceVal = 1;
    cin >> sequenceLength;
    int fibonacciSeq[sequenceLength];
    
    fibonacciSeq.at(0) = 1;
    fibonacciSeq.at(1) = 1;
    for (i = 0; i < sequenceLength; i++) {
      sequenceVal = fibonacciSeq.at(i-1) + fibonacciSeq.at(i-2);
      fibonacciSeq.pushback_back(sequenceVal);
    }
    return sequenceVal;
  }
