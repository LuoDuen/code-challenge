  //option 2.3: calculating a factorial:
  int factorialFunction (int factorialVal) {
    cout << "How many integers would you like to use?" << endl;
    cin >> userEntries;
    for (int i = 1; i <= userEntries.size(); ++i) {
            factorialVal *= i;
    }
    return factorialVal;
  }
  
