  //option 2.2: output largest integer function
  int findMaxVal (int maxVal) {
    cin >> firstInPut;
    cin >> secondInput;
    cin >> thirdInput;
    
    if (thirdInput > secondInput && thirdInput > firstInput) {
      maxVal = thirdInput; 
    }
    else if (secondInput > firstInput && secondInput > thirdInput) {
      maxVal = secondInput; 
    }
    else if (firstInput > secondInput && firstInput > thirdInput) {
      maxVal = firstInput; 
    }
    return maxVal;
  }
  
